<h1>Director #<%= @this_director.id %> details</h1>

<a href = "/directors">Go back</a>


<dl>
  <dt>Name</dt>
    <dd><%=@this_director.name%></dd>
  <dt>Dob</dt>
    <dd><%=@this_director.dob%></dd>
  <dt>Bio</dt>
    <dd><%=@this_director.bio%></dd>
  <dt>Image</dt>
    <dd><img src = "<%=@this_director.image%>" width = 250px></dd>
  <dt>Created at</dt>
    <dd><%=@this_director.created_at%></dd>
  <dt>Updated at</dt>
    <dd><%=@this_director.updated_at%></dd>
</dl>

<hr>

<h1>Filmography</h1>
<table border = "1">
  <tr>
    <th>ID</th>
    <th>Image</th>
    <th>Title</th>
    <th>Year</th>
    <th>Director</th>
    <th></th>
  <tr>

  <%@film_records.each do |each_film|%>
  <tr>
    <td><%=each_film.id%></td>
    <td><img src = "<%=each_film.image%>" width = 100px></td>
    <td><%=each_film.title%></td>
    <td><%=each_film.year%></td>
    <td><%=@this_director.name%></td>
    <td><a href = "/movies/<%=each_film.id%>">Show details</a></td>
  
    
  <%end%>
  <tr>
</table>
